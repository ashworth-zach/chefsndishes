<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Page Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO"
        crossorigin="anonymous">
</head>
<body>
    <div class="jumbotron text-center"><h1>ADD A DISH</h1></div>
    <a href="/">Home</a>
    <div class="container">
        @model Dish
        <form asp-action="AddDish" asp-controller="Home" method="post">
        <label asp-for="Chefid">Chefs name:</label>
            <span asp-validation-for="Chefid"></span>
            <select asp-for='Chefid'>
                    @foreach(var x in @ViewBag.AllChefs){
                    <option value='@x.Chefid'>@x.firstname</option>
                    }
                </select><br>
        <label asp-for="tastiness">Tastiness</label>
        <span asp-validation-for="tastiness"></span>
        <select asp-for='tastiness'>
                <option value='1'>1</option>
                <option value='2'>2</option>
                <option value='3'>3</option>
                <option value='4'>4</option>
                <option value='5'>5</option>
            </select><br>
            <span asp-validation-for="name"></span>
            <label asp-for="name">name of dish</label>
            <input asp-for="name"><br>
        <span asp-validation-for="calories"></span>
        <label asp-for="calories">calories</label>
        <input asp-for="calories"><br>
        <input value="Add Dish" type="submit">
        </form>
    </div>
</body>
</html>